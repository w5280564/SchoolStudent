<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/bsae_rel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/type_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/chinese_icon" />

        <TextView
            android:id="@+id/chinese_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/chinese_img"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:text="时间" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/type_img"
            android:orientation="vertical">

            <TextView
                android:id="@+id/chinese_work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="语文作业"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/chinese_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>



</LinearLayout>